    public void jMenu_State() {
        if (account_flagger == 1) {

            jMenu_PatientRecordManagement.setVisible(true);
            jMenu_Print.setVisible(true);
            jMenu_Login.setVisible(false);

        } else if (account_flagger == 0) {
            jMenu_PatientRecordManagement.setVisible(false);
            jMenu_Print.setVisible(false);
        }
    }


